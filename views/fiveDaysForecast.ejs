    <script>
      function lookUpAddress()
      {
        $.ajax({
            url: "https://geoip-db.com/jsonp",
            jsonpCallback: "callback",
            dataType: "jsonp",
            success: function( location , ) {

                $('#city').val(location.city +", " + location.country_name);
            }
        });
      }
    </script>
